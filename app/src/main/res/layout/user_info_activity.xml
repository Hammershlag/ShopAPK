<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailTextInfo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="userinfoemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userinfoemail"
            app:layout_constraintTop_toBottomOf="@+id/emailTextInfo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userinfopasswordtext"
            app:layout_constraintTop_toBottomOf="@+id/userinfoemail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" android:layout_marginStart="12dp"/>
    <TextView
            android:text="passwordinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userinfopassword"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/userinfopasswordtext"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Name"
            app:layout_constraintTop_toBottomOf="@+id/view_password"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="NameInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/NameInfo"
            app:layout_constraintTop_toBottomOf="@+id/Name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Surname:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Surname"
            app:layout_constraintTop_toBottomOf="@+id/NameInfo"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="SurnameInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/SurnameInfo"
            app:layout_constraintTop_toBottomOf="@+id/Surname"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Phone Number:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/PH_number"
            app:layout_constraintTop_toBottomOf="@+id/SurnameInfo"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Phone_Number_InfoS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/PH_Info"
            app:layout_constraintTop_toBottomOf="@+id/PH_number" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" android:layout_marginStart="16dp"/>
    <CheckBox
            android:text="View Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/view_password"
            app:layout_constraintTop_toBottomOf="@+id/userinfopassword" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
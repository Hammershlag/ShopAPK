<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailTextInfo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="userinfoemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userinfoemail"
            app:layout_constraintTop_toBottomOf="@+id/emailTextInfo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userinfopasswordtext"
            app:layout_constraintTop_toBottomOf="@+id/userinfoemail" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="passwordinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userinfopassword"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/userinfopasswordtext"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
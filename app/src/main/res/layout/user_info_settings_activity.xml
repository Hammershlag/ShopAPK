<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:background="@color/backgroundColor"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="Name:"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameText"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="64dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Surname:"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/surnameText"
            app:layout_constraintTop_toBottomOf="@+id/nameEditText"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textColor"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/nameEditText"
            app:layout_constraintTop_toBottomOf="@+id/nameText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/textColor"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/surnameTextEdit"
            app:layout_constraintTop_toBottomOf="@+id/surnameText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Phone Number:"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Phone_number"
            app:layout_constraintTop_toBottomOf="@+id/surnameTextEdit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="48dp"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:textColor="@color/textColor"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textColor"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextPhone"
            app:layout_constraintTop_toBottomOf="@+id/Phone_number" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/confirmationButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="24dp" android:layout_marginBottom="56dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>